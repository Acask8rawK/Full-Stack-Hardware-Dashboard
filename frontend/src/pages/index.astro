---
import BenchmarkModule from '../components/BenchmarkModule';
import SystemMonitor from '../components/SystemMonitor';
import StressModule from '../components/StressModule';
import '../styles/global.css';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Engineer's Terminal</title>
  </head>
  <body class="bg-slate-950 min-h-screen text-slate-200 p-8 flex items-center justify-center">
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 w-full max-w-7xl">
        
        <div class="flex flex-col gap-4">
            <div class="text-xs font-mono text-slate-500 uppercase tracking-widest mb-2">Compute Unit</div>
            <BenchmarkModule client:load />
        </div>

        <div class="flex flex-col gap-4">
             <div class="text-xs font-mono text-slate-500 uppercase tracking-widest mb-2">Telemetry</div>
             <SystemMonitor client:load />
        </div>

        <div class="flex flex-col gap-4">
             <div class="text-xs font-mono text-slate-500 uppercase tracking-widest mb-2">Load Testing</div>
             <StressModule client:load />
        </div>

    </div>

  </body>
</html>